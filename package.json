{
  "name": "@folio/finc-select",
  "version": "1.0.0",
  "description": "description for finc-select-app",
  "main": "src/index.js",
  "repository": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "stripes serve",
    "build": "stripes build --output ./output",
    "test": "stripes test karma",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@bigtest/interactor": "^0.9.2",
    "@bigtest/mirage": "^0.0.1",
    "@bigtest/mocha": "^0.5.2",
    "@bigtest/react": "^0.1.2",
    "@folio/eslint-config-stripes": "^4.2.0",
    "@folio/stripes-erm-components": "^1.7.2",
    "@folio/stripes": "^2.10.0",
    "@folio/stripes-cli": ">=1.14.0",
    "babel-eslint": "^9.0.0",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^5.12.0",
    "mocha": "^5.2.0",
    "react": "~16.8.6",
    "react-dom": "~16.8.6",
    "react-redux": "~5.1.1",
    "redux": "^4.0.0",
    "sinon": "^7.2.4"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react-dropzone": "^9.0.0",
    "react-intl": "^2.5.0",
    "react-router-dom": "^4.1.1",
    "react-router-prop-types": "^1.0.4",
    "redux-form": "^7.0.3"
  },
  "peerDependencies": {
    "@folio/stripes": "^2.10.0",
    "react": "*",
    "react-dom": "*",
    "react-redux": "*",
    "redux": "*"
  },
  "stripes": {
    "actsAs": ["app"],
    "displayName": "ui-finc-select.meta.title",
    "route": "/finc-select",
    "home": "/finc-select",
    "queryResource": "query",
    "okapiInterfaces": {
      "finc-select/metadata-sources": "1.0",
      "finc-select/metadata-collections": "1.0",
      "finc-select/filters": "1.0",
      "finc-select/files": "1.0"
    },
    "permissionSets": [
      {
        "permissionName": "module.finc-select.enabled",
        "displayName": "UI: finc-select module is enabled",
        "visible": true
      },
      {
        "permissionName": "settings.finc-select.enabled",
        "displayName": "Settings (finc-select): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-finc-select.view",
        "displayName": "fincSelect: Can view metadatasources, metadatacollections and filters",
        "description": "Can view metadatasources, metadatacollections and filters",
        "subPermissions": [
          "module.finc-select.enabled",
          "fincSelect.view"
        ],
        "visible": true
      }
    ],
    "icons": [
      {
        "name": "app",
        "alt": "FINC select",
        "title": "fincSelect"
      }
    ]
  }
}
