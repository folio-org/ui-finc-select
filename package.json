{
  "name": "@folio/finc-select",
  "version": "1.0.0",
  "description": "description for finc-select-app",
  "main": "src/index.js",
  "repository": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "stripes serve",
    "build": "stripes build --output ./output",
    "test-int": "stripes test nightmare --run demo --show",
    "test": "stripes test karma",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@bigtest/interactor": "^0.8.1",
    "@bigtest/mirage": "^0.0.1",
    "@bigtest/mocha": "^0.5.1",
    "@bigtest/react": "^0.1.2",
    "@folio/eslint-config-stripes": "^3.2.1",
    "@folio/stripes": "^2.0.0",
    "@folio/stripes-cli": "^1.10.0",
    "@folio/stripes-core": "^3.0.0",
    "babel-eslint": "^9.0.0",
    "babel-polyfill": "^6.26.0",
    "chai": "^4.2.0",
    "eslint": "^5.6.0",
    "mocha": "^5.2.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "sinon": "^6.3.4"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "prop-types": "^15.6.0",
    "react-intl": "^2.5.0",
    "react-router-dom": "^4.1.1",
    "redux-form": "^7.0.3"
  },
  "peerDependencies": {
    "@folio/stripes": "^2.3.0",
    "react": "*",
    "react-dom": "*",
    "react-redux": "*",
    "redux": "*"
  },
  "stripes": {
    "type": "app",
    "displayName": "ui-finc-select.meta.title",
    "route": "/fincselect",
    "home": "/fincselect",
    "hasSettings": true,
    "okapiInterfaces": {
      "finc-select/metadata-sources": "0.1",
      "finc-select/metadata-collections": "0.1",
      "vendor-storage.vendors": "1.0"
    },
    "permissionSets": [
      {
        "permissionName": "module.finc-select.enabled",
        "displayName": "UI: finc-select module is enabled",
        "visible": true
      },
      {
        "permissionName": "settings.finc-select.enabled",
        "displayName": "Settings (finc-select): display list of settings pages",
        "subPermissions": [
          "settings.enabled"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-finc-select.view",
        "displayName": "fincSelect: Can view metadatasources and metadatacollections",
        "description": "Can view metadatasources and metadatacollections",
        "subPermissions": [
          "module.finc-select.enabled",
          "fincSelect.view"
        ],
        "visible": true
      }
    ],
    "icons": [
      {
        "name": "app",
        "alt": "FINC select",
        "title": "fincSelect"
      }
    ]
  }
}
